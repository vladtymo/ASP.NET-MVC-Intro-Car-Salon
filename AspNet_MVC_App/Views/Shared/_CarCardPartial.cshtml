@model AspNet_MVC_App.Models.Car;

<div class="card d-inline-block" style="width: 18rem;">
    <img class="card-img-top" src="@WebConstants.carImagesPath@Model.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Model</h5>
        <p class="card-text">@Model.Category.Name</p>
        <a asp-action="CarDetails" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
    </div>
</div>